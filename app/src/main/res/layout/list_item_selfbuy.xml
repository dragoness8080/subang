<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="3dp"
        app:cardElevation="@dimen/small_card_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dip">

                <TextView
                    android:id="@+id/tv_status_str"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dip"
                    android:textColor="@color/themeOrange"
                    android:text="#status"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_time_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:layout_centerVertical="true"
                    android:text="创建时间："
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/tv_time_title"
                    android:layout_toRightOf="@id/tv_time_title"
                    android:layout_marginLeft="2dip"
                    android:text="2018-05-04 12:05:03"
                    android:textSize="12sp"/>

            </RelativeLayout>
            <include layout="@layout/layout_splitline" />
            <ListView
                android:id="@+id/listview_goods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"></ListView>
            <include layout="@layout/layout_splitline" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dip">

                <TextView
                    android:id="@+id/tv_express_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tv_express_price"
                    android:layout_toLeftOf="@+id/tv_express_price"
                    android:text="运费"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_express_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tv_paymoney_title"
                    android:layout_toLeftOf="@+id/tv_paymoney_title"
                    android:layout_marginLeft="3dip"
                    android:text="#运费"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_paymoney_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tv_paymoney"
                    android:layout_toLeftOf="@+id/tv_paymoney"
                    android:layout_marginLeft="5dip"
                    android:text="实付"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_paymoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dip"
                    android:text="#实付"
                    android:textSize="12sp"/>

            </RelativeLayout>
            <include layout="@layout/layout_splitline" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dip">

                <Button
                    android:id="@+id/btn_right"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/button_arc_orange"
                    android:focusable="false"
                    android:text="右按钮"
                    android:textColor="@color/white"
                    android:textSize="12sp"/>

                <Button
                    android:id="@+id/btn_left"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/btn_right"
                    android:background="@drawable/button1"
                    android:focusable="false"
                    android:text="左按钮"
                    android:textColor="#bfbfbf"
                    android:textSize="12sp"/>

            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>