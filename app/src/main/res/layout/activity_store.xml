<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/layout_title_back" />

    <android.support.v7.widget.CardView
        android:id="@+id/card_store_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFFFFF" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="小店名称"
                android:textColor="#808080"
                android:textSize="@dimen/small_text_size" />

            <ImageButton
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="31dp"
                android:background="@drawable/icon_right"
                android:contentDescription="@string/value" />

            <TextView
                android:id="@+id/tv_store_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView3"
                android:layout_alignBottom="@+id/textView3"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="110dp"
                android:textColor="#808080"
                android:textSize="@dimen/small_text_size" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <include layout="@layout/layout_splitline" />

    <android.support.v7.widget.CardView
        android:id="@+id/card_store_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFFFFF" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="小店头像"
                android:textColor="#808080"
                android:textSize="@dimen/small_text_size" />

            <ImageButton
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="31dp"
                android:background="@drawable/icon_right"
                android:contentDescription="@string/value" />

            <ImageView
                android:id="@+id/img_store_logo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="110dp"
                android:background="#00ffffff"
                android:contentDescription="@string/value" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <include layout="@layout/layout_splitline" />

    <android.support.v7.widget.CardView
        android:id="@+id/card_store_signs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFFFFF" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="小店店招"
                android:textColor="#808080"
                android:textSize="@dimen/small_text_size" />
     <ImageView
                android:id="@+id/img_store_img"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="110dp"
                android:background="@color/white"
                android:contentDescription="@string/value" />
            <ImageButton
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="31dp"
                android:background="@drawable/icon_right"
                android:contentDescription="@string/value" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <include layout="@layout/layout_splitline" />

    <android.support.v7.widget.CardView
        android:id="@+id/card_store_introduce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#FFFFFF" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="小店简介"
                android:textColor="#808080"
                android:textSize="@dimen/small_text_size" />

            <EditText
                   android:id="@+id/et_store_introduce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@null"
                android:layout_marginRight="15dp"
                android:layout_marginTop="40dp"
                android:hint="小店简介，分享你的小店"
                android:textSize="@dimen/small_text_size" >
                <requestFocus />
            </EditText>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <include layout="@layout/layout_splitline" />
  <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp" 
            android:layout_weight="1"
        >

      <Button
          android:id="@+id/btn_store_confirm"
          android:layout_width="match_parent"
          android:layout_height="36dp"
          android:layout_centerHorizontal="true"
          android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
          android:background="@drawable/button_halfarc_orange"
          android:textColor="@color/white"
          android:text="确认" />

              </RelativeLayout>
</LinearLayout>