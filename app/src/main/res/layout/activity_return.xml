<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/layout_title_back" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="true"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="@color/white" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:text="商品名称:" />

                <TextView
                    android:id="@+id/tv_goodstitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:text="" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="45dp"
                    android:text="订单金额：" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="45dp"
                    android:text="" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="75dp"
                    android:text="订单编号:" />

                <TextView
                    android:id="@+id/tv_ordersn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="75dp"
                    android:text="" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="105dp"
                    android:text="交易时间：" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="105dp"
                    android:text="" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@color/white" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="退款金额"
                    android:textColor="@color/black" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignRight="@+id/textView1"
                    android:layout_marginRight="21dp" />

                <TextView
                    android:id="@+id/tv_refundmoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView1"
                    android:layout_alignBottom="@+id/textView1"
                    android:layout_marginLeft="21dp"
                    android:layout_toRightOf="@+id/textView1"
                    android:text=""
                    android:textColor="@color/themeOrange" />
            </RelativeLayout>

            <include layout="@layout/layout_splitline" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#FFFFFF" >

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="手机号码"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_toRightOf="@+id/phone"
                    android:background="@null"
                    android:ems="10"
                    android:hint="请填写手机号便于卖家联系你"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:textColorHint="#999999"
                    android:textSize="@dimen/normal_text_size" >
                </EditText>
            </RelativeLayout>

            <include layout="@layout/layout_splitline" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#FFFFFF" >

                <TextView
                    android:id="@+id/reason"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="退款理由"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/et_reason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/reason"
                    android:layout_marginLeft="17dp"
                    android:layout_toRightOf="@+id/reason"
                    android:background="@null"
                    android:ems="10"
                    android:hint="请填写您退款的理由"
                    android:textColorHint="#999999"
                    android:textSize="@dimen/normal_text_size" >

                    <requestFocus />
                </EditText>
            </RelativeLayout>

            <include layout="@layout/layout_splitline" />

            <android.support.v7.widget.CardView
                android:id="@+id/card_file"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:background="#FFFFFF" >

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="上传图片"
                        android:textColor="@color/black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginTop="50dp"
                        android:orientation="horizontal" >

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="70dp"
                            android:layout_weight="1" >

                            <ImageView
                                android:id="@+id/img1"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/bg_add" />

                            <ImageView
                                android:id="@+id/cancel1"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignTop="@+id/img1"
                                android:layout_marginLeft="-10dp"
                                android:layout_marginTop="-10dp"
                                android:layout_toRightOf="@+id/img1"
                                android:src="@drawable/icon_cancel"
                                android:visibility="invisible" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="70dp"
                            android:layout_weight="1" >

                            <ImageView
                                android:id="@+id/img2"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/bg_add" />

                            <ImageView
                                android:id="@+id/cancel2"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignTop="@+id/img2"
                                android:layout_marginLeft="-10dp"
                                android:layout_marginTop="-10dp"
                                android:layout_toRightOf="@+id/img2"
                                android:src="@drawable/icon_cancel"
                                android:visibility="invisible" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="70dp"
                            android:layout_weight="1" >

                            <ImageView
                                android:id="@+id/img3"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/bg_add" />

                            <ImageView
                                android:id="@+id/cancel3"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignTop="@+id/img3"
                                android:layout_marginLeft="-10dp"
                                android:layout_marginTop="-10dp"
                                android:layout_toRightOf="@+id/img3"
                                android:src="@drawable/icon_cancel"
                                android:visibility="invisible" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="70dp"
                            android:layout_weight="1" >

                            <ImageView
                                android:id="@+id/img4"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/bg_add" />

                            <ImageView
                                android:id="@+id/cancel4"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignTop="@+id/img4"
                                android:layout_marginLeft="-10dp"
                                android:layout_marginTop="-10dp"
                                android:layout_toRightOf="@+id/img4"
                                android:src="@drawable/icon_cancel"
                                android:visibility="invisible" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="70dp"
                            android:layout_weight="1" >

                            <ImageView
                                android:id="@+id/img5"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/bg_add" />

                            <ImageView
                                android:id="@+id/cancel5"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignTop="@+id/img5"
                                android:layout_marginLeft="-10dp"
                                android:layout_marginTop="-10dp"
                                android:layout_toRightOf="@+id/img5"
                                android:src="@drawable/icon_cancel"
                                android:visibility="invisible" />
                        </RelativeLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/textView2"
                        android:layout_alignBottom="@+id/textView2"
                        android:layout_marginLeft="18dp"
                        android:layout_toRightOf="@+id/textView2"
                        android:text="可上传5张图片"
                        android:textSize="@dimen/small_text_size" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp" >

                <Button
                    android:id="@+id/btn_confirm"
                    android:layout_width="250dp"
                    android:layout_height="36dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/button_halfarc_orange"
                    android:text="确认"
                    android:textColor="@color/white"
                    android:textSize="@dimen/small_text_size" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>