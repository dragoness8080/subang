<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="480dp" >

    <RelativeLayout
           android:id="@+id/relativeLayout"
        android:layout_width="240dp"
        android:layout_height="320dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_card" >

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_couponname"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp" >

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="10"
                android:textColor="@color/white"
                android:textSize="@dimen/very_large_text_size" />

            <TextView
                android:id="@+id/txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_num"
                android:layout_alignBottom="@+id/tv_num"
                android:layout_toRightOf="@+id/tv_num"
                android:text="元优惠券"
                android:textColor="@color/white" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="请在XXX前使用"
            android:textSize="@dimen/very_small_text_size"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_couponname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="130dp"
            android:text="素邦送您"
            android:textColor="@color/white"
            android:textSize="@dimen/large_text_size" />

        <Button
            android:id="@+id/btn_check"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_below="@+id/tv_time"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_circle_yellow"
            android:textColor="@color/white"
            android:text="立即查看" />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/ibtn_cancel"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/relativeLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/icon_circle_cancel"/>

</RelativeLayout>