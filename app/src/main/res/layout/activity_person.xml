<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E8E7"
    android:orientation="vertical" >

    <include layout="@layout/layout_title_back" />

    <ScrollView
        android:id="@+id/personal_mainView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <android.support.v7.widget.CardView
                android:id="@+id/card_logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#FFFFFF" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="22dp"
                        android:text="头像"
                        android:textColor="#808080"
                        android:textSize="@dimen/small_text_size" />

                    <ImageButton
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="31dp"
                        android:background="@drawable/icon_right"
                        android:contentDescription="@string/value" />

                    <ImageView
                        android:id="@+id/img_logo"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="110dp"
                        android:background="#00ffffff"
                        android:contentDescription="@string/value" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <include layout="@layout/layout_splitline" />

            <android.support.v7.widget.CardView
                android:id="@+id/card_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#FFFFFF" >

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="22dp"
                        android:text="昵称"
                        android:textColor="#808080"
                        android:textSize="@dimen/small_text_size" />

                    <ImageButton
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="31dp"
                        android:background="@drawable/icon_right"
                        android:contentDescription="@string/value" />

                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/textView3"
                        android:layout_alignBottom="@+id/textView3"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="110dp"
                        android:textColor="#808080"
                        android:textSize="@dimen/small_text_size" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <include layout="@layout/layout_splitline" />

            <android.support.v7.widget.CardView
                android:id="@+id/card_sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#FFFFFF" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="22dp"
                        android:text="性别"
                        android:textColor="#808080"
                        android:textSize="@dimen/small_text_size" />

                    <ImageButton
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="31dp"
                        android:background="@drawable/icon_right"
                        android:contentDescription="@string/value" />

                    <TextView
                        android:id="@+id/tv_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="110dp"
                        android:text=""
                        android:textColor="#808080"
                        android:textSize="@dimen/small_text_size" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <include layout="@layout/layout_splitline" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <include layout="@layout/layout_splitline" />

            <android.support.v7.widget.CardView
                android:id="@+id/card_birth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:visibility="gone"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#FFFFFF" >

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="22dp"
                        android:text="生日"
                        android:textColor="#808080"
                        android:textSize="@dimen/small_text_size" />

                    <ImageButton
                        android:id="@+id/imageButton5"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="31dp"
                        android:background="@drawable/icon_right"
                        android:contentDescription="@string/value" />

                    <TextView
                        android:id="@+id/tv_birth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="110dp"
                        android:text=""
                        android:textSize="@dimen/small_text_size" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#FFFFFF" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="22dp"
                        android:text="手机"
                        android:textColor="#808080"
                        android:textSize="@dimen/small_text_size" />

                    <ImageButton
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="31dp"
                        android:background="@drawable/icon_right"
                        android:contentDescription="@string/value" />

                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="110dp"
                        android:text=""
                        android:textColor="#808080"
                        android:textSize="@dimen/small_text_size" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
               <include layout="@layout/layout_splitline" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />
                <include layout="@layout/layout_splitline" />
              <android.support.v7.widget.CardView
                android:id="@+id/card_bank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#FFFFFF" >

                  

                    <ImageButton
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="31dp"
                        android:background="@drawable/icon_right"
                        android:contentDescription="@string/value" />

                    <TextView
                        android:id="@+id/tv_bank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="50dp"
                        android:text="绑定银行卡"
                        android:textColor="#808080"
                        android:textSize="@dimen/small_text_size" />

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="22dp"
                        android:src="@drawable/icon_bank" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>
                <include layout="@layout/layout_splitline" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>