<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
                android:id="@+id/user"
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/bg_pic" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@+id/logo"
            android:text="#username" />

        <RatingBar
            android:id="@+id/ratingBar"
            style="@style/roomRatingBar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:isIndicator="true"
            android:layout_marginRight="10dp"        />

    </RelativeLayout>
<RelativeLayout
                android:id="@+id/rlyt_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
               android:layout_marginRight="10dp"
            android:text="#content" />

    </RelativeLayout>
    <RelativeLayout
                android:id="@+id/rlyt_images"
        android:layout_width="match_parent"
        android:layout_height="60dp" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/bg_pic" />
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="70dp"
            android:src="@drawable/bg_pic" />
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="130dp"
            android:src="@drawable/bg_pic" />
           <ImageView
            android:id="@+id/imageView4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="190dp"
            android:src="@drawable/bg_pic" />
               <ImageView
            android:id="@+id/imageView5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="250dp"
            android:src="@drawable/bg_pic" />

    </RelativeLayout>
    <RelativeLayout
                android:id="@+id/rlyt_reply_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:id="@+id/tv_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="[回复]"
            android:textColor="@color/themeOrange" />

        <TextView
            android:id="@+id/tv_reply_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_reply"
            android:layout_alignBottom="@+id/tv_reply"
            android:layout_toRightOf="@+id/tv_reply"
                      android:layout_marginRight="10dp"
            android:text="#reply_content" />

    </RelativeLayout>
    <RelativeLayout
                android:id="@+id/rlyt_reply_images"
        android:layout_width="match_parent"
        android:layout_height="60dp" >

        <ImageView
            android:id="@+id/reply_imageView1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/bg_pic" />
        <ImageView
            android:id="@+id/reply_imageView2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="70dp"
            android:src="@drawable/bg_pic" />
        <ImageView
            android:id="@+id/reply_imageView3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="130dp"
            android:src="@drawable/bg_pic" />
              <ImageView
            android:id="@+id/reply_imageView4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="190dp"
            android:src="@drawable/bg_pic" />
                   <ImageView
            android:id="@+id/reply_imageView5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="250dp"
            android:src="@drawable/bg_pic" />

    </RelativeLayout>
    <RelativeLayout
                android:id="@+id/rlyt_append_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
   <TextView
            android:id="@+id/tv_append"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="[追加]"
            android:textColor="@color/themeOrange" />

        <TextView
            android:id="@+id/tv_append_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_append"
            android:layout_alignBottom="@+id/tv_append"
            android:layout_toRightOf="@+id/tv_append"
                      android:layout_marginRight="10dp"
            android:text="#content" />

    </RelativeLayout>
    <RelativeLayout
                android:id="@+id/rlyt_append_images"
        android:layout_width="match_parent"
        android:layout_height="60dp" >

        <ImageView
            android:id="@+id/append_imageView1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/bg_pic" />
        <ImageView
            android:id="@+id/append_imageView2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="70dp"
            android:src="@drawable/bg_pic" />
        <ImageView
            android:id="@+id/append_imageView3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="130dp"
            android:src="@drawable/bg_pic" />
                <ImageView
            android:id="@+id/append_imageView4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="190dp"
            android:src="@drawable/bg_pic" />
                        <ImageView
            android:id="@+id/append_imageView5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="250dp"
            android:src="@drawable/bg_pic" />

    </RelativeLayout>
    <RelativeLayout
                android:id="@+id/rlyt_append_reply_content"
        android:layout_width="match_parent"
        android:layout_height="40dp" >
        <TextView
            android:id="@+id/tv_append_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="[回复]"
            android:textColor="@color/themeOrange" />

        <TextView
            android:id="@+id/tv_append_reply_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_append_reply"
            android:layout_alignBottom="@+id/tv_append_reply"
            android:layout_toRightOf="@+id/tv_append_reply"
            android:text="#reply_content" />

    </RelativeLayout>
    <RelativeLayout
                android:id="@+id/rlyt_append_reply_images"
        android:layout_width="match_parent"
        android:layout_height="60dp" >

        <ImageView
            android:id="@+id/append_reply_imageView1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/bg_pic" />
        <ImageView
            android:id="@+id/append_reply_imageView2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="70dp"
            android:src="@drawable/bg_pic" />
        <ImageView
            android:id="@+id/append_reply_imageView3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="130dp"
            android:src="@drawable/bg_pic" />
            <ImageView
            android:id="@+id/append_reply_imageView4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="190dp"
            android:src="@drawable/bg_pic" />
        
                <ImageView
            android:id="@+id/append_reply_imageView5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="250dp"
            android:src="@drawable/bg_pic" />
            

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp" >

        <TextView
            android:id="@+id/tv_createtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
                android:layout_marginRight="10dp"   
            android:text="#time" />

    </RelativeLayout>
</LinearLayout>
