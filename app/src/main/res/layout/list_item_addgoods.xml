<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dip">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_goods_thumb"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="10dip"/>

            <TextView
                android:id="@+id/tv_goods_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img_goods_thumb"
                android:layout_alignTop="@id/img_goods_thumb"
                android:text="商品名称:"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_goods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_goods_title"
                android:layout_alignBaseline="@id/tv_goods_title"
                android:layout_marginLeft="10dip"
                android:text="#商品名称"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_price_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img_goods_thumb"
                android:layout_centerVertical="true"
                android:text="单价:"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_price_title"
                android:layout_alignBaseline="@id/tv_price_title"
                android:layout_marginLeft="10dip"
                android:text="#单价"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_num_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img_goods_thumb"
                android:layout_alignBottom="@id/img_goods_thumb"
                android:text="补充数量:"
                android:textSize="12sp"/>

            <EditText
                android:id="@+id/et_buy_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/tv_num_title"
                android:layout_toRightOf="@id/tv_num_title"
                android:layout_marginLeft="10dip"
                android:ems="6"
                android:textSize="12sp"
                android:digits="1234567890"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <include layout="@layout/layout_splitline" />

</LinearLayout>