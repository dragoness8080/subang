<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rlyt_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/titleGrayColor" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dip"
            android:text="我的足迹"
            android:textSize="@dimen/very_big_text_size" />

        <ImageButton
            android:id="@+id/back"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/icon_back"
            android:contentDescription="@string/value" />

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:text="删除"
            android:textSize="@dimen/normal_text_size" />
    </RelativeLayout>
 <LinearLayout
        android:id="@+id/layout_null_foot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone" >

        <include
            android:id="@+id/layout_foot"
            layout="@layout/layout_null_foot" />
    </LinearLayout>
    <android.support.v4.widget.SwipeRefreshLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/swipeRefreshLayout_footprint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.gcs.suban.view.LoadListView
            android:id="@+id/list_footprint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
       android:divider="@color/bgColor"
        android:dividerHeight="2dp" />
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>