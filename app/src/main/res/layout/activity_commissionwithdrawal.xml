<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include layout="@layout/layout_title_back" />

    <Button
        android:id="@+id/btn_balance"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/themeOrange"
        android:text="提现到余额"
        android:textColor="@color/white"
        android:textSize="@dimen/normal_text_size" />

    <Button
        android:id="@+id/btn_weixin"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_below="@+id/btn_balance"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:background="@color/green"
        android:text="提现到微信"
        android:textColor="@color/white"
        android:textSize="@dimen/normal_text_size" />

    <Button
        android:id="@+id/btn_bank"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_below="@+id/btn_weixin"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:text="提现到银行卡"
        android:textSize="@dimen/normal_text_size" />

    <TextView
        android:id="@+id/tv_moeny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_balance"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:text="#money"
        android:textSize="@dimen/big_text_size" />

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_moeny"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="我的可提现佣金" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@+id/txt1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:src="@drawable/icon_recharge" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="温馨提示\n1.如果您的可提现佣金小于50元，只能提到余额\n2.如果您的可提现佣金大于等于50元，可以提现到余额或者微信\n3.如果您的可提现佣金大于500元，只能提现到银行卡"
        android:textSize="@dimen/small_text_size" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignTop="@+id/textView1"
        android:layout_marginLeft="8dp"
        android:src="@drawable/icon_tip" />

</RelativeLayout>