<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginTop="5dip"
        android:background="@color/white">


        <TextView
            android:id="@+id/tv_addmoney_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="金额："
            android:textSize="20dip"/>

        <EditText
            android:id="@+id/et_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_addmoney_title"
            android:layout_alignBaseline="@id/tv_addmoney_title"
            android:layout_alignBottom="@id/tv_addmoney_title"
            android:ems="10"
            android:textSize="20dip"
            android:background="@null"
            android:digits="1234567890."
            android:singleLine="true"/>

    </RelativeLayout>

    <include layout="@layout/layout_splitline" />

    <Button
        android:id="@+id/btn_save_money"
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:layout_marginTop="50dip"
        android:layout_marginLeft="60dip"
        android:layout_marginRight="60dip"
        android:background="@drawable/button_halfarc_orange"
        android:text="提交"
        android:textColor="@color/white"/>

</LinearLayout>