<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_hight"
        android:background="@color/white" >

        <TextView
            android:id="@+id/tv_commission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text="#佣金"
            android:textSize="@dimen/normal_text_size"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:src="@drawable/bg_pic" />

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/img_logo"
            android:text="#名字"
            android:textSize="@dimen/small_text_size" />

        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_nickname"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12dp"
            android:text="注册时间:"
            android:textSize="@dimen/small_text_size" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txt1"
            android:layout_alignBottom="@+id/txt1"
            android:layout_toRightOf="@+id/txt1"
            android:text="#time"
            android:textSize="@dimen/small_text_size" />
          <ImageView
             android:id="@+id/img_notice"
             android:layout_width="25dp"
             android:layout_height="25dp"
             android:layout_alignParentRight="true"
                 android:layout_centerVertical="true"
             android:layout_marginRight="14dp"
             android:background="@drawable/btn_notice_normal" />
    </RelativeLayout>

</LinearLayout>